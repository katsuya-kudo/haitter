<div class="login-form">
<h1>ログイン</h1>

<% if @error_message %>
<%= @error_message %>
<% end %>

<%= form_tag("/login") do %>
<p>メールアドレス</p>
<input name="email" value="<%= @email %>">
<p>パスワード</p>
<input type="password" name="password" value="<%= @password %>">
<br>
<br>
<input type="submit" value="ログイン">
<% end %>
</div>