<!DOCTYPE html>
<html>
  <head>
    <title>HaitterApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    
    
  </head>
  
  
  <header>
    <% if @current_user %>
     <%= link_to("Haitter","/posts/index") %>
      <% else %>
      <%= link_to("Haitter", "/") %>
      <% end %>
      
    
    <% if @current_user %>
    
    <%= link_to(@current_user.user_name,"/users/#{@current_user.id}") %>
    
    <%=link_to("災害情報","/posts/api") %>
    <%=link_to("投稿一覧","/posts/index") %>
    <%=link_to("新規投稿","/posts/new") %>
    <%=link_to("ログアウト","/logout",{method: "post"}) %>
    
    <% else %>
    <%=link_to("Haitterとは","/about") %>
    <%=link_to("新規登録","/signup") %>
    <%=link_to("ログイン","/login") %>
    <% end %>
  </header>
  <div class="flash-coment">
  <% if flash[:notice] %>
  
  <%= flash[:notice] %>
  
  <% end %>
  </div>
  <body>
    <%= yield %>
  </body>
</html>
